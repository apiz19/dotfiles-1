#!/bin/sh

dte() {
    echo "$($HOME/bin/status/datetime)"
}

hdd() {
    echo "$($HOME/bin/status/filesystem)"
}

mem() {
    echo "$($HOME/bin/status/memory)"
}

cputemp() {
    echo "$($HOME/bin/status/cpu-temp)"
}

vol() {
	echo "$($HOME/bin/status/volume)"
}

batcap() {
	echo "$($HOME/bin/status/bat-capacity)"
}

batstat() {
	echo "$($HOME/bin/status/bat-state)"
}

wlan() {
    echo "$($HOME/bin/status/network-wlan-tfc)"
}

user() {
    echo "$($HOME/bin/status/user)"
}

vpn() {
    echo "$($HOME/bin/status/vpn)"
}

tor() {
    echo "$($HOME/bin/status/tor)"
}

record() {
    echo "$($HOME/bin/status/record)"
}

mailbox() {
    echo "$($HOME/bin/status/mailbox)"
}

keymon() {
    echo "$($HOME/bin/status/key-mon)"
}

misc() {
    echo "$($HOME/bin/status/misc)"
}

status() {
    echo " $(record)$(tor)$(vpn)$(misc)$(keymon)$(wlan) $(cputemp) $(mem) $(hdd) $(vol) $(mailbox) $(dte) $(batstat) $(batcap) $(user)"
}

while true; do
	xsetroot -name "$(status)"
	sleep 1
done
