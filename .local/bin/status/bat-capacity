# GNU/Linux
cap=$(cat /sys/devices/platform/smapi/BAT0/remaining_percent)
if [ $cap -ge 0 ] && [ $cap -le 10 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#FF0000^^r21,4,2,8^^d^^f24^" $cap
elif [ $cap -ge 11 ] && [ $cap -le 20 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#FF0000^^r19,4,4,8^^d^^f24^" $cap
elif [ $cap -ge 21 ] && [ $cap -le 30 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#FFAA00^^r17,4,6,8^^d^^f24^" $cap
elif [ $cap -ge 31 ] && [ $cap -le 40 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#FFAA00^^r15,4,8,8^^d^^f24^" $cap
elif [ $cap -ge 41 ] && [ $cap -le 50 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#FFAA00^^r14,4,9,8^^d^^f24^" $cap
elif [ $cap -ge 51 ] && [ $cap -le 60 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#55AA00^^r13,4,10,8^^d^^f24^" $cap
elif [ $cap -ge 61 ] && [ $cap -le 70 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#55AA00^^r11,4,12,8^^d^^f24^" $cap
elif [ $cap -ge 71 ] && [ $cap -le 80 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#55AA00^^r10,4,13,8^^d^^f24^" $cap
elif [ $cap -ge 81 ] && [ $cap -le 90 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#55AA00^^r7,4,16,8^^d^^f24^" $cap
elif [ $cap -ge 91 ] && [ $cap -le 99 ]; then
    # echo "" $cap
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#55AA00^^r5,4,18,8^^d^^f24^" $cap
elif [ $cap -eq 100 ]; then
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#BBBBBB^^r3,4,20,8^^d^^f24^" $cap
else
    # echo ""
    echo -e "^r0,6,2,4^^r2,3,22,10^^c#1E1E1E^^r3,4,20,8^^c#1e1e1e^^r3,4,20,8^^d^^f24^" "?"
fi
